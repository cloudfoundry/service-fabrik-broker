{
  "node": true,
  "esnext": true,
  "asi": false,
  "boss": false,
  "eqnull": false,
  "evil": false,
  "expr": false,
  "funcscope": false,
  "smarttabs": true,
  "shadow": false,
  "sub": false,
  "supernew": false,
  "bitwise": true,
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "immed": true,
  "indent": 2,
  "latedef": false,
  "loopfunc": false,
  "maxerr": 7,
  "noarg": true,
  "nonew": true,
  "plusplus": false,
  "quotmark": "single",
  "regexdash": false,
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "white": true,
  "validthis": true, // Tolerate using this in a non-constructor
  "globals": {
    "Promise": true
  },
  "predef": [
    "describe",
    "it",
    "before",
    "after",
    "beforeEach",
    "afterEach",
    "chai",
    "expect",
    "sinon",
    "mocks",
    "support"
